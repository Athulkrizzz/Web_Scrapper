<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-5">
  <div class="container">
    <h1 class="mb-4">Scraped Books Dashboard</h1>
    <form method="POST" action="/scrape">
      <button class="btn btn-primary mb-3" type="submit">Scrape Now</button>
    </form>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.price %></td>
            <td><%= book.rating %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
